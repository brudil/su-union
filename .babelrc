{
  "presets": [["es2015", {"modules": "commonjs"}], "react", "stage-2"],
  "plugins": [
    [ "babel-plugin-webpack-alias", { "config": "./webpack.base.config.js" } ]
  ],
  "env": {
    "dev-server": {
      "plugins": ["babel-plugin-inline-import-graphql-ast"]
    },
    "bundle": {
      "presets": [["env", {
        "targets": {
          "browsers": ["last 2 versions", "safari 7", "IE 11"]
        },
        "useBuiltIns": false,
        "modules": false,
        "blacklist": [
          "transform-regenerator"
        ]
      }]],
      "plugins": ["react-hot-loader/babel"]
    }
  }
}
